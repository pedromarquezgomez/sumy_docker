# Variables de entorno para Railway
# Configura estas variables en Railway Dashboard > Settings > Variables

# OpenAI (opcional pero recomendado para mejores respuestas)
OPENAI_API_KEY=tu_openai_api_key_aqui
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# Configuración del entorno
ENVIRONMENT=railway
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Base vectorial (Railway usa in-memory ChromaDB)
VECTOR_DB_TYPE=chroma

# Puerto (Railway lo asigna dinámicamente, no cambiar)
PORT=8080 